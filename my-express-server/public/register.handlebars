<script>
    let radios = document.getElementsByName("flexRadioDefault");
    for (const radio of radios) {
        radio.onclick = function (event) {
            if (event.target.value == 1) {
                document.getElementById("customer-register").style.cssText = "display: none"
                document.getElementById("developer-register").style.cssText = "display: inline"
            } else {
                document.getElementById("developer-register").style.cssText = "display: none"
                document.getElementById("customer-register").style.cssText = "display: inline"
            }
        }
    }
</script>